@-webkit-keyframes loading{
  0%{
    transform:scaleY(1);
    -moz-transform:scaleY(1);
    -webkit-transform:scaleY(1);
  }
  50%{
    transform:scaleY(.4);
    -moz-transform:scaleY(.4);
    -webkit-transform:scaleY(.4);
  }
  100%{
    transform:scaleY(1);
    -moz-transform:scaleY(1);
    -webkit-transform:scaleY(1);
  }
}

// 加载中遮罩的样式
#loadMask {
  display: flex;
  position: fixed;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  justify-content: center;
  align-items: center;
  background-color: white;
  opacity: 0.8;  
}
#loadMask .loadingMask {
  width: 100%;
  text-align: center;
}
.loading i{display:inline-block;width:4px;height:35px;border-radius:2px; background:#333;margin:0 2px;}
.loading i:nth-child(1){
  -webkit-animation:loading 1s ease-in .1s infinite;
  -moz-animation:loading 1s ease-in .1s infinite;
  animation:loading 1s ease-in .1s infinite;
}
.loading i:nth-child(2){
  -webkit-animation:loading 1s ease-in .2s infinite;
  -moz-animation:loading 1s ease-in .2s infinite;
  animation:loading 1s ease-in .2s infinite;
}
.loading i:nth-child(3){
  -webkit-animation:loading 1s ease-in .3s infinite;
  -moz-animation:loading 1s ease-in .3s infinite;
  animation:loading 1s ease-in .3s infinite;
}
.loading i:nth-child(4){
  -webkit-animation:loading 1s ease-in .4s infinite;
  -moz-animation:loading 1s ease-in .4s infinite;
  animation:loading 1s ease-in .4s infinite;
}
.loading i:nth-child(5){
  -webkit-animation:loading 1s ease-in .5s infinite;
  -moz-animation:loading 1s ease-in .5s infinite;
  animation:loading 1s ease-in .5s infinite;
}    

